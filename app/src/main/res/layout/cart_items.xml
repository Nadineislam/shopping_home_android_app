<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <TextView
        android:id="@+id/productName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:padding="5dp"
        android:text="@string/product_name"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/productNameVal"
        app:layout_constraintHorizontal_bias=".5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/productNameVal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:padding="5dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".5"
        app:layout_constraintStart_toEndOf="@id/productName"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="product name val" />

    <TextView
        android:id="@+id/productPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:padding="5dp"
        android:text="@string/product_price"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/productName"
        app:layout_constraintHorizontal_bias=".5"
        app:layout_constraintStart_toStartOf="@id/productName"
        app:layout_constraintTop_toBottomOf="@id/productName" />

    <TextView
        android:id="@+id/productPriceVal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:padding="5dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/productNameVal"
        app:layout_constraintHorizontal_bias=".5"
        app:layout_constraintStart_toEndOf="@id/productPrice"
        app:layout_constraintStart_toStartOf="@id/productNameVal"
        app:layout_constraintTop_toBottomOf="@id/productNameVal"
        tools:text="product price val" />

    <TextView
        android:id="@+id/totalPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:padding="5dp"
        android:text="@string/total_price_"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/productName"
        app:layout_constraintHorizontal_bias=".5"
        app:layout_constraintStart_toStartOf="@id/productPrice"
        app:layout_constraintTop_toBottomOf="@id/productPrice" />

    <TextView
        android:id="@+id/totalPriceVal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:padding="5dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/productPriceVal"
        app:layout_constraintHorizontal_bias=".5"
        app:layout_constraintStart_toEndOf="@id/productPrice"
        app:layout_constraintStart_toStartOf="@id/productPriceVal"
        app:layout_constraintTop_toBottomOf="@id/productPriceVal"
        tools:text="total price value" />

    <TextView
        android:id="@+id/totalQuantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:padding="5dp"
        android:text="@string/total_quantity"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/totalPrice"
        app:layout_constraintHorizontal_bias=".5"
        app:layout_constraintStart_toStartOf="@id/totalPrice"
        app:layout_constraintTop_toBottomOf="@id/totalPrice" />

    <TextView
        android:id="@+id/totalQuantityVal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:padding="5dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/totalPriceVal"
        app:layout_constraintHorizontal_bias=".5"
        app:layout_constraintStart_toEndOf="@id/totalPrice"
        app:layout_constraintStart_toStartOf="@id/totalPriceVal"
        app:layout_constraintTop_toBottomOf="@id/totalPriceVal"
        tools:text="total quantity value" />

    <ImageView
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/image_delete"
        android:src="@drawable/ic_baseline_delete_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>